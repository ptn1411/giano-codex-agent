# Environment Variables for Giano Codex Agent

# ==========================================
# Bot Configuration
# ==========================================
BOT_TOKEN=your_giano_bot_token_here
GIANO_API_URL=https://messages-api.bug.edu.vn
GIANO_WS_URL=wss://messages-api.bug.edu.vn/bot/ws

# ==========================================
# LLM Configuration
# ==========================================
LLM_BASE_URL=http://127.0.0.1:8045/v1
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=claude-opus-4-5-thinking
LLM_MAX_TOKENS=8192
LLM_TEMPERATURE=0.7

# ==========================================
# Agent Configuration
# ==========================================
DEFAULT_WORKSPACE=./workspace
SANDBOX_POLICY=workspace-write
APPROVAL_POLICY=on-request

# ==========================================
# Admin & Security
# ==========================================
ADMIN_USER_IDS=user1,user2
MAX_HISTORY_MESSAGES=50
MAX_FILE_SIZE_KB=500

# ==========================================
# Optional Features
# ==========================================
AUTO_CREATE_PR=false
AUTO_RUN_TESTS=true
ENABLE_COST_TRACKING=false
