{
  "name": "giano-codex-agent",
  "version": "0.1.0",
  "description": "Custom AI Coding Agent for Giano Chat with Claude API integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:darwin-arm64": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile ./build/giano-agent-darwin-arm64",
    "build:darwin-x64": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile ./build/giano-agent-darwin-x64",
    "build:linux-arm64": "bun build ./src/index.ts --compile --target=bun-linux-arm64 --outfile ./build/giano-agent-linux-arm64",
    "build:linux-x64": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile ./build/giano-agent-linux-x64",
    "build:windows-x64": "bun build ./src/index.ts --compile --target=bun-windows-x64 --outfile ./build/giano-agent-windows-x64.exe",
    "build:all": "bun run build:windows-x64 && bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "check": "bun run type-check && bun run lint && bun run build",
    "ci": "bun run check"
  },
  "keywords": [
    "giano",
    "codex",
    "agent",
    "ai",
    "coding-assistant",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "diff": "^7.0.0",
    "dotenv": "^16.6.1",
    "gianobot": "^1.1.1",
    "glob": "^11.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.12",
    "openai": "^4.104.0",
    "tiktoken": "^1.0.22",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^22.19.11",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
